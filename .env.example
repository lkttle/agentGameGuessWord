# SecondMe OAuth
# 请确保应用 scopes 包含：user.info、chat、voice（语音播放）
SECONDME_CLIENT_ID=your_secondme_client_id
SECONDME_CLIENT_SECRET=your_secondme_client_secret
SECONDME_OAUTH_REDIRECT_URI=http://localhost:3000/api/auth/callback
SECONDME_OAUTH_URL=https://go.second.me/oauth/
SECONDME_API_BASE_URL=https://app.mindos.com/gate/lab
SECONDME_TOKEN_CODE_ENDPOINT=/api/oauth/token/code
SECONDME_TOKEN_REFRESH_ENDPOINT=/api/oauth/token/refresh

# App
APP_BASE_URL=http://localhost:3000
SESSION_SECRET=replace_with_a_strong_random_secret

# TTS Debug (可选)
# 设为 1 后输出详细语音链路日志（后端 API + 前端播放）
SECONDME_TTS_DEBUG=0
NEXT_PUBLIC_TTS_DEBUG=0

# TTS Audio Proxy (可选)
# 默认开启（非 0 即开启）：后端会拉取 SecondMe 音频并转 data URL 返回，
# 以规避浏览器对跨域 mp3 的 ORB 拦截（net::ERR_BLOCKED_BY_ORB）
SECONDME_TTS_PROXY_AUDIO=1

# Database
DATABASE_URL=postgresql://user:password@localhost:5432/a2a_guess_word
